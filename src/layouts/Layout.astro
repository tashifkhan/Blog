---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="color-scheme" content="light dark" />
		<meta name="theme-color" content="#0f172a" />
		<meta
			name="description"
			content="BlogOS by Tashif - Discover insightful articles, tutorials, and resources on web development, programming, and technology."
		/>
		<meta
			name="keywords"
			content="BlogOS, Tashif, blog, web development, programming, technology, tutorials, articles"
		/>
		<meta name="author" content="Tashif" />
		<link rel="canonical" href="https://blog.tashif.codes/" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>BlogOS - A blog website by Tashif</title>
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://tashif.codes/" />
		<meta property="og:title" content="BlogOS - A blog website by Tashif" />
		<meta
			property="og:description"
			content="Discover insightful articles, tutorials, and resources on web development, programming, and technology."
		/>
		<meta property="og:image" content="/favicon.png" />
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="BlogOS - A blog website by Tashif" />
		<meta
			name="twitter:description"
			content="Discover insightful articles, tutorials, and resources on web development, programming, and technology."
		/>
		<meta name="twitter:image" content="/favicon.png" />
	</head>
	<body>
		<slot />
		<script>
			// Sync theme variables with CSS custom properties
			function syncThemeVariables() {
				const themeEvent = new CustomEvent("sync-theme-vars");
				window.dispatchEvent(themeEvent);
			}

			// Initial sync and listen for theme changes
			document.addEventListener("DOMContentLoaded", syncThemeVariables);
			window.addEventListener("themechange", syncThemeVariables);
		</script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	:root {
		--zoom: 1;
	}
	body {
		transform: scale(var(--zoom));
		transform-origin: top center;
	}
	@media (max-width: 640px) {
		body {
			transform: none;
		}
	}

	/* Theme variables sync */
	:root {
		--theme-bg: #dedede;
		--theme-text: #000000;
		--theme-accent: #0060cb;
		--theme-border: #888888;
		--theme-window-bg: #ffffff;
		--theme-secondary: #f0f0f0;
		--theme-muted: #e8e8e8;
	}
</style>
